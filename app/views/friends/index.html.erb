<% if notice %>
  <%= render "layouts/alert" %>
<% end %>
<div class="mx-4 mt-4">
  <table class="table table-striped table-bordered table-hover table-sm">
    <thead class="thead-dark">
      <tr>
        <th scope="col">Name</th>
        <th scope="col">Email</th>
        <th scope="col">Phone Number</th>
        <th scope="col">Twitter Handle</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @friends.each do |friend| %>
        <tr>
          <td> <%= link_to  "#{friend.last_name} " + "#{friend.first_name}", friend_path(friend) %> </td>
          <td><%= friend.email %></td>
          <td><%= friend.phone %></td>
          <td><%= friend.twitter_handle %></td>
          <td>
            <%= link_to "Delete", friend_path(friend), data: { "turbo-method": :delete }, class:"btn btn-outline-danger btn-sm" %>
          </td>
        </tr>
      <% end %>  
    </tbody>
  </table>
  <%= link_to "Add New Friend", new_friend_path, class: "btn btn-dark btn-md" %>
</div>