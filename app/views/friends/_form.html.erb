<div class="mx-5 border p-3 w-75 rounded shadow d-flex flex-column">
  <%= form_with(model: @friend, local: true) do |form| %>
    <div class="form-group">
      <%= form.text_field :first_name, class: "form-control form-control-sm", placeholder: "First Name" %>
    </div>
    <div class="form-group">
      <%= form.text_field :last_name, class: "form-control form-control-sm", placeholder: "Last Name" %>
    </div>
    <div class="form-group">
      <%= form.text_field :email, class: "form-control form-control-sm", placeholder: "Email Address" %>
    </div>
    <div class="form-group">
      <%= form.text_field :phone, class: "form-control form-control-sm", placeholder: "Phone Number" %>
    </div>
    <div class="form-group">
      <%= form.text_field :twitter_handle, class: "form-control form-control-sm", placeholder: "Twitter Handle" %>
    </div>
    <div class="form-group">
      <%= form.number_field :user_id, id: :friend_user_id, class: "form-control form-control-sm", value: current_user.id, type: :hidden  %>
    </div>
    <div class="form-group d-flex justify-content-center">
      <%= form.submit class: "btn btn-dark btn-md mx-3" %>
      <%= link_to "Back To Friends", friends_path, class: "btn btn-dark btn-md" %>
    </div>
  <% end %>
</div>